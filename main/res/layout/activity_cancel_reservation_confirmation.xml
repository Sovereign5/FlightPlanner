<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CancelReservationConfirmationActivity">

    <Button
        android:id="@+id/confirmCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@android:string/cancel"
        app:layout_constraintBottom_toTopOf="@+id/confirmCancelReservationButton"
        app:layout_constraintEnd_toEndOf="@+id/confirmCancelReservationButton"
        app:layout_constraintStart_toStartOf="@+id/confirmCancelReservationButton" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="@string/please_confirm"
        app:layout_constraintBottom_toTopOf="@+id/confirmCancelButton"
        app:layout_constraintStart_toStartOf="@+id/confirmCancelButton" />

    <Button
        android:id="@+id/confirmCancelReservationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginTop="214dp"
        android:text="@string/confirm_reservation_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>